</head>

<body>
    <center>
        <h1> List of Colleges </h1>
    </center>


    <% if (msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <%= msg %>
    </div>
    <% } %>

    <div class="container">
        <div class="row">
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>SNo.</th>
                        <th>College Name</th>
                        <th>Representative Name</th>
                        <th>Designation</th>
                        <th>Add</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>

                    <% for (var i = 0;i < college.length; i++) { %>
            

                    <tr id="d1">
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                                <%= college[i].cname %></td>
                        <td>
                            <%= college[i].rname%>
                        </td>
                        <td>
                            <%= college[i].desig%>
                        </td>

                        <td><button type="button" data-toggle="modal" data-target="#edit" data-uid="1" class="update btn btn-warning btn-sm"
                            onclick=" window.location.href = '/clglistac/<%=college[i]._id %>';">
                            
                            
                            <span
                                    class="glyphicon glyphicon-ok"></span></button></td>
                        <td><button type="button" data-toggle="modal" data-target="#delete" data-uid="1" class="delete btn btn-danger btn-sm"
                            onclick=" window.location.href = '/clglistrc/<%=college[i]._id %>';">
    
                            
                            <span
                                    class="glyphicon glyphicon-remove"></span></button></td>
                    </tr>
                    <% } %>
                
                </tbody>
            </table>
        </div>
    </div>
